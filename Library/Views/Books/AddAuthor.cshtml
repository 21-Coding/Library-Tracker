@{
  Layout = "_Layout";
}
@model Library.Models.Book
<div class="row">
  <div class="col-md-6 offset-md-3">

    <h4 class="text-center">Add an Author to the Book @Html.DisplayNameFor(model => model.Title)</h4>
    @using (@Html.BeginForm())
    {
      @Html.HiddenFor(model => model.BookId);
      <div class="form-group">
          @Html.Label("Select Author")
          @Html.DropDownList("AuthorId", null, new { @class="form-control"})
      </div>
      <input type="submit" value="Save" class="btn btn-block btn-light" />
    }
  </div>
</div>