@{
    Layout = "_Layout";
}
@model Library.Models.Book;

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1 class="text-center">Book Create</h1>
        @using (Html.BeginForm())
        {
            <div class="form-group">
                @Html.LabelFor(model => model.Title)
                @Html.TextBoxFor(model => model.Title, new {@class="form-control"})
            </div>
            <div class="form-group">
                <p>Published Year</p>
                @* @Html.LabelFor(model => model.PublishedYear) *@
                @Html.TextBoxFor(model => model.PublishedYear, new {@class="form-control"})
            </div>

            <button type="submit" class="btn btn-info btn-block"> Add a Book </button>
        }
    </div>
</div>