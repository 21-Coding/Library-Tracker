@{
  Layout = "_Layout";
}

@model Library.Models.Book

<div class="row">
  <div class="col-md-6 offset-md-3">
    <h4 class="text-center">Edit this Book: @Html.DisplayFor(model => model.Title)</h4>

    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.BookId)
      <div class="form-group">
        @Html.LabelFor(model => model.Title)
        @Html.EditorFor(model => model.Title,new { htmlAttributes = new {@class="form-control"}})
      </div>
      <div class="form-group">
        @Html.LabelFor(model => model.PublishedYear)
        @Html.EditorFor(model => model.PublishedYear,new { htmlAttributes = new {@class="form-control"}})
      </div>
        <input type="submit" value="Save" class="btn btn-info btn-block"/>
    }
    <p>@Html.ActionLink("Back to Books", "Index")</p>
  </div>
</div>
